@using CQRS.Domain.Entities
@model List<Order>

<table class="table">
    <thead>
        <tr>
            <th>
                Number
            </th>
            <th>
                Date
            </th>
            <th>
                Provider Name
            </th>
            <th>
                Order Item Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Provider.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderItem.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"
                   class="btn btn-primary mx-2">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>