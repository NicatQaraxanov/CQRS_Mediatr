@using CQRS.Application.Features.Queries.Orders.GetOrder
@model GetOrderQueryResponse

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>OrderGetViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Number
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Number
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Date
        </dd>
        <dt class="col-sm-2">
            Provider Name
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Provider.Name
        </dd>
        <dt class="col-sm-2">
            Order Item Name
        </dt>
        <dd class="col-sm-10">
            @Model.Order.OrderItem.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditOrder" asp-route-id=@Model.Order.Id>Edit</a> |
